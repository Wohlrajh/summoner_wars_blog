{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" id="login" method="post" class="sign-in-form clearfix">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}" required="required" placeholder="Username" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" required="required" placeholder="Password" />
            <a href="{{ path('fos_user_resetting_request') }}" data-toggle="tooltip" data-placement="bottom" title="Please click here to reset your password"><span class="not-header">Reset password</span><span class="glyphicons glyphicons-info-sign"></span></a>
        </div>
        <button type="submit" name="_submit" id="_submit"><span class="not-header">Sign in</span><span class="glyphicons glyphicons-tick"></span></button>
    </form>
{% endblock %}
